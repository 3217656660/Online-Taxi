<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxy.work.dao.PaymentMapper">

    <resultMap id="BaseResultMap" type="com.zxy.work.entities.Payment">
        <id column="ID" property="id" jdbcType="INTEGER"/>
        <result column="ORDER_ID" property="orderId" jdbcType="INTEGER"/>
        <result column="PAYMENT_METHOD" property="paymentMethod" jdbcType="VARCHAR"/>
        <result column="AMOUNT" property="amount" jdbcType="FLOAT"/>
        <result column="CREATE_TIME" property="createTime" jdbcType="DATE"/>
        <result column="UPDATE_TIME" property="updateTime" jdbcType="DATE"/>
        <result column="IS_DELETED" property="isDeleted" jdbcType="TINYINT"/>
    </resultMap>

    <insert id="create" parameterType="Payment" useGeneratedKeys="true" keyProperty = "id" keyColumn = "id">
        insert into online_taxi.payment(ORDER_ID,PAYMENT_METHOD,AMOUNT)
        values(#{orderId},#{paymentMethod},#{amount});
    </insert>

    <update id="delete" parameterType="Integer">
        UPDATE online_taxi.payment
        SET is_deleted = 1
        WHERE is_deleted = 0 AND order_id = #{orderId} AND amount > 0
    </update>

    <update id="update" parameterType="Payment">
        UPDATE online_taxi.payment
        <set>
            <if test="paymentMethod != null">payment_method = #{paymentMethod},</if>
            <if test="amount != null">amount = #{amount},</if>
        </set>
        WHERE order_id = #{orderId} AND is_deleted = 0
    </update>

    <select id="selectByOrderId" parameterType="Integer" resultMap="BaseResultMap">
        SELECT ID,ORDER_ID,PAYMENT_METHOD,AMOUNT,CREATE_TIME,UPDATE_TIME FROM online_taxi.payment WHERE is_deleted = 0 AND order_id = #{orderId}
    </select>
</mapper>