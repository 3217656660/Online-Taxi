<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxy.work.dao.UserDao">

    <resultMap id="BaseResultMap" type="com.zxy.work.entities.User">
        <result column="ID" property="id" jdbcType="INTEGER"/>
        <result column="USERNAME" property="username" jdbcType="VARCHAR"/>
        <result column="PASSWORD" property="password" jdbcType="VARCHAR"/>
        <result column="MOBILE" property="mobile" jdbcType="VARCHAR"/>
        <result column="EMAIL" property="email" jdbcType="VARCHAR"/>
        <result column="CREATE_TIME" property="createTime" jdbcType="DATE"/>
        <result column="UPDATE_TIME" property="updateTime" jdbcType="DATE"/>
        <result column="IS_DELETED" property="isDeleted" jdbcType="TINYINT"/>
    </resultMap>

    <insert id="create" parameterType="User" keyProperty="id">
        insert into online_taxi.user(id,username,password,mobile,email,create_time,update_time,is_deleted) values(#{id},#{username},#{password},#{mobile},#{email},#{createTime},#{updateTime},#{isDeleted});
    </insert>

    <select id="selectByMobile" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM online_taxi.user WHERE is_deleted = 0 AND mobile = #{mobile}
    </select>

    <select id="selectById" parameterType="Integer" resultMap="BaseResultMap">
        SELECT * FROM online_taxi.user WHERE is_deleted = 0 AND id = #{id}
    </select>

    <update id="update" parameterType="User" keyProperty="id">
        UPDATE online_taxi.user
        SET username = #{username}, password = #{password}, mobile = #{mobile}, email = #{email} ,update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <update id="delete" parameterType="User" keyProperty="id">
        UPDATE online_taxi.user
        SET update_time = #{updateTime} , is_deleted = #{isDeleted}
        WHERE id = #{id}
    </update>

</mapper>